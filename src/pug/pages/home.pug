main.home
	section.home__section.home__section--about#about
		//-  Блок «О себе»
		h1.home__title.home__title--about#sharing-title!= data.home.about.name
		p.home__about-bio#sharing-description!= data.home.about.bio

		//- Блок «Контакты»
		.home__contacts
			a.home__contact.home__contact--link(href=`mailto:${data.home.contacts.mail}`)!= data.home.contacts.mail
			a.home__contact.home__contact--link(href=`tel:${data.home.contacts.linkTel}`)!= data.home.contacts.displayTel
			span.home__contact!= data.home.contacts.location
			ul.home__socials
				each social in data.home.socials
					li
						button.home__social-button(data-social=social aria-label=`Share in ${social}`)
							+svg(social).home__social-icon

	section.home__section.home__section--job-education#resume
		//- Блок «Опыт работы»
		h2.home__title.home__title--job.fade-hidden
			| Work experience
		ul.home__jobs
			each job, key in data.home.jobs
				//- Разметка элемента job
				li.home__job.fade-hidden
					span.home__job-time!= job.time
					.home__job-position-box
						h3.home__job-position!= job.position
						span.home__job-logo(class=`${key === 0 ? 'home__job-logo--long' : '' } sprite-${job.specialityLogo}`)

					.home__job-company-box(
						class={'home__job-company-box--block': key === 2}
					)
						if job.companyLogo
							img.home__job-company-logo(
								src=`${emptyImage}`
								data-src=`${baseDir}images/${job.companyLogo}.png`
								data-srcset=`${baseDir}images/${job.companyLogo}@2x.png 2x`
								data-html2canvas-ignore
								alt="Company logo"
								width="30"
								height="30"
							)
						if job.companyName
							span.home__job-company-name!= job.companyName
						span.home__job-company-desc!= job.companyDesc

					.home__job-duty-box
						p.home__job-duty!= job.duty
						each project in job.projects
							a.home__job-project(href=project.link rel="noreferrer noopener" target="_blank")!= project.name

		//- Декоративное изображение (жонглер)
		img.home__decor-image.home__decor-image--juggler.fade-hidden(
			src=`${emptyImage}`
			data-src=`${baseDir}images/juggling-guy.png`
			data-srcset=`${baseDir}images/juggling-guy.webp, ${baseDir}images/juggling-guy@2x.webp 2x, ${baseDir}images/juggling-guy@2x.png 2x`
			data-html2canvas-ignore
			alt="A painted guy who juggles coins"
			width="300"
			height="465"
		)

		//-  Блок «Образование»
		h2.home__title.home__title--education.fade-hidden
			| Education
		ul.home__educations
			each education in data.home.educations
				li.home__education.fade-hidden
					span(class=`sprite-${education.logo}`)
					h3.home__education-speciality!= education.speciality
					each institution in education.institutions
						p.home__education-institution!= institution

	section.home__section.home__section--skills#skills
		//-  Блок «Навыки»
		h2.home__title.home__title--skills.fade-hidden
			| Skills
		ul.home__skills.fade-hidden
			each skill in data.home.skills
				li.home__skill
					h3.home__skill-group!= skill.group
					p.home__skill-values!= skill.values

	//- Декоративное изображение (сердечко из пальцев)
	img.home__decor-image.home__decor-image--fingers.fade-hidden(
		src=`${emptyImage}`
		data-src=`${baseDir}images/fingers-heart.png`
		data-srcset=`${baseDir}images/fingers-heart.webp, ${baseDir}images/fingers-heart@2x.webp 2x, ${baseDir}images/fingers-heart@2x.png 2x`
		data-html2canvas-ignore
		alt="Fingers folded in the shape of a heart"
		width="350"
		height="230"
	)
